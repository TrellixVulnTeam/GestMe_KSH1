#:kivy 1.8.0
<HomeWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    
    canvas.before:
        Color: 
            rgba: root.consts().COLOR_APP[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation:'vertical'

        BoxLayout:
            size_hint_y: None
            height: 100
            
            canvas.before:
                Color: 
                    rgba: root.consts().COLOR_APP[0]
                
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Label:
                text:'GestMe'
                bold: True
                size_hint_x: 0.9
                color: root.consts().COLOR_APP[1]
                font_size: '70dp'

            HoverButton:
                size_hint_x: 0.1
                text: 'Log Out'
                font_size: 10
                background_color: root.consts().COLOR_APP[0]
                background_normal: ''
                on_release: root.logout()
                
        BoxLayout:
            id:cont_box
            size_hint_y: None
            
            TabbedPanel:
                id:tabs_home
                do_default_tab: False
                tab_width: self.size[0] / 3

                canvas:
                    Color:
                        rgb: root.consts().COLOR_APP[0]
                    Rectangle:
                        size: self.size
                        pos: self.pos

                TabbedPanelItem:
                    background_color: root.consts().COLOR_APP[1]
                    background_down: ""
                    # background_normal: ""
                    text: 'Home'
                    Label:
                        text: 'First tab content area'
                TabbedPanelItem:
                    background_color: root.consts().COLOR_APP[1]
                    background_down: ""
                    # background_normal: ""
                    text: 'Movies'
                    Label:
                        text: 'Movies tab content area'
                TabbedPanelItem:
                    background_color: root.consts().COLOR_APP[1]
                    background_down: ""
                    # background_normal: ""
                    text: 'Books'
                    Label:
                        text: 'Books tab content area'
                # FlatButton:
                #     text: 'Home'
                #     canvas.before:
                #         Color:
                #             rgba: root.consts().COLOR_APP[1]
                #         Line:
                #             width: 2
                #             # rectangle: self.x, self.y, self.width, self.height


                # FlatButton:
                #     text: 'Movies'
                #     # on_press:

                # FlatButton:
                #     text: 'Books'
                #     # on_press:

            
        BoxLayout:
            orientation:'vertical'
            
            GridLayout:
                id:grid_lay
                cols:10
                row_default_height:200
                col_default_width:10

                

            
            Label:
                id:sp2

        