#:kivy 1.8.0
<FlatButton@ButtonBehavior+Label>:
    font_size: 20

<HomeWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    
    canvas.before:
        Color: 
            rgba: root.consts().COLOR_MAIN[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 50
            
            canvas.before:
                Color: 
                    rgba: root.consts().COLOR_MAIN[1]
                
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Label:
                text:'Homepage'
                bold: True
                size_hint_x: 0.9

            FlatButton:
                size_hint_x: 0.1
                text: 'Log Out'
                font_size: 10
                on_release: root.logout()

        BoxLayout:
            orientation:'vertical'
            
            AsyncImage: 
                source: root.images_urls[0]
    
            AsyncImage: 
                source: root.images_urls[1]
    
            FlatButton:
                text:'Load_images'
                on_release: root.load_movies()
            Label:
                id:sp2
        

