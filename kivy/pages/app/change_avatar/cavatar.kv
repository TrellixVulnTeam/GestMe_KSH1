#:kivy 1.8.0
#:import Factory kivy.factory.Factory

<SpinnerOption>:
    size:  root.width, 40
    background_color: (.06, .45, .45, 1)
    background_normal: ''

<MyDropdown@DropDown>:
    max_height: 200

<CavatarWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    
    canvas.before:
        Color: 
            rgba: root.consts().COLOR_APP[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 50
            
            canvas.before:
                Color: 
                    rgba: root.consts().COLOR_APP[0]
                
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Label:
                text:'Change your avatar'
                bold: True
                size_hint_x: 0.9
        
        BoxLayout:
            orientation: 'vertical'
            padding: main_win.space_x, 10
            spacing: 10
        
            BoxLayout:
                id: box_main
                orientation: 'vertical'
                spacing: 15
                size_hint_y: None
                height: 390
                
                

            Label:
                id:sp
                size_hint_y: None
                height: 20
        
            HoverButton:
                text: 'Confirm'
                size_hint_y: None
                height: 40
                background_color: root.consts().COLOR_APP[1]
                background_normal: ''
                on_release: root.validate_choice()

            Label:
                id:sp2
            

    FlatButton:
        size_hint_y: .1
        height: 40
        text: 'Back'
        on_release: root.redirect_app_home()


