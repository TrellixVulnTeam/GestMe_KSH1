#:kivy 1.11
<FlatButton@ButtonBehavior+Label>:
    font_size: 20

# <SpinnerOption>:
#     size_hint: None, None
#     size:  root.width, 20

<SignUpWindow>:
    id: main_win
    orientation: 'vertical'
    space_x: self.size[0]/3

    canvas.before:
        Color: 
            rgba: root.consts().COLOR_MAIN[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        
        canvas.before:
            Color: 
                rgba: root.consts().COLOR_MAIN[1]
            
            Rectangle:
                size: self.size
                pos: self.pos
        
        Label:
            text:'Sign Up'
            bold: True
            size_hint_x: 0.9
    
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        spacing: 10
       
        BoxLayout:
            orientation: 'vertical'
            spacing: 15
            size_hint_y: None
            height: 500
        
            Label:
                id: info
                text: ''
                markup: True
                
            TextInput: 
                id: nam_field
                hint_text: 'Name'
                multiline: False
                write_tab: False
                focus: True
                on_text_validate: usr_field.focus = True
            
            TextInput: 
                id: usr_field
                hint_text: 'Username'
                multiline: False
                write_tab: False
                focus: False
                on_text_validate: ema_field.focus = True
            
            # DatePicker: 
            #     id: dat_field
            #     hint_text: 'Birtday'
            #     date = date.today()
            #     focus: False
            #     on_text_validate: pwd_field.focus = True
            
            TextInput: 
                id: ema_field
                hint_text: 'E-mail'
                write_tab: False
                focus: False
                multiline: False
                on_text_validate: pwd_field.focus = True
            
            TextInput: 
                id: pwd_field
                password: True
                hint_text: 'Password'
                write_tab: False
                multiline: False
                on_text_validate: vpw_field.focus = True
            
            TextInput: 
                id: vpw_field
                password: True
                hint_text: 'Confirm password'
                write_tab: False
                multiline: False
                on_text_validate: root.validade_user()

            Spinner:
                id: fom_field
                text: 'Education'
                values: root.list_formacoes()
                background_color: root.consts().COLOR_MAIN[0]
                height: '32dp'
                on_text: root.textinputtext = self.text
            
            Spinner:
                id: pai_field
                text: 'Contries'
                values: root.list_paises()
                background_color: root.consts().COLOR_MAIN[0]
                height: '32dp'
                on_text: root.textinputtext = self.text

            Button:
                text: 'Next'
                size_hint_y: None
                height: 40
                background_color: root.consts().COLOR_MAIN[1]
                background_normal: ''
                on_release: root.validate_user()
            
            Label:
                id:sp2
        
    FlatButton:
        text: 'Home'
        size_hint_y: 0.1
        on_release: root.redirect_gestme()