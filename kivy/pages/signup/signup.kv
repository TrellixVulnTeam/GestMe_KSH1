<SignUpWindow>:
    id: main_win
    orientation: 'vertical'
    space_x: self.size[0]/3

    canvas.before:
        Color: 
            rgba: root.consts().COLOR_MAIN[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint_y: None
        height: 50
        
        canvas.before:
            Color: 
                rgba: root.consts().COLOR_MAIN[1]
            
            Rectangle:
                size: self.size
                pos: self.pos
        
        Label:
            text:'Sign Up'
            bold: True
            size_hint_x: 0.9
    
    BoxLayout:
        orientation: 'vertical'
        padding: main_win.space_x, 10
        spacing: 20
       
        BoxLayout:
            orientation: 'vertical'
            spacing: 15
            size_hint_y: None
            height: 120