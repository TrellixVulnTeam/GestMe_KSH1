#:kivy 1.8.0
#:import Factory kivy.factory.Factory

<FlatButton@ButtonBehavior+Label>:
    font_size: 20

<SpinnerOption>:
    size:  root.width, 40
    background_color: (.06, .45, .45, 1)
    background_normal: ''

<MyDropdown@DropDown>:
    max_height: 200

<SignUpWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    
    canvas.before:
        Color: 
            rgba: root.consts().COLOR_MAIN[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: None
            height: 50
            
            canvas.before:
                Color: 
                    rgba: root.consts().COLOR_MAIN[1]
                
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            Label:
                text:'Sign Up'
                bold: True
                size_hint_x: 0.9
        
        BoxLayout:
            orientation: 'vertical'
            padding: main_win.space_x, 10
            spacing: 10
        
            BoxLayout:
                id: box_main
                orientation: 'vertical'
                spacing: 15
                size_hint_y: None
                height: 390
                
                Label:
                    id: info
                    text: ''
                    markup: True
                    
                TextInput: 
                    id: nam_field
                    hint_text: 'Name'
                    multiline: False
                    write_tab: False
                    focus: True
                    on_text_validate: usr_field.focus = True
                
                TextInput: 
                    id: usr_field
                    hint_text: 'Username'
                    multiline: False
                    write_tab: False
                    focus: False
                    on_text_validate: ema_field.focus = True

                TextInput: 
                    id: ema_field
                    hint_text: 'E-mail'
                    write_tab: False
                    focus: False
                    multiline: False
                    on_text_validate: bir_field.focus = True

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 15
                    size_hint_y: None
                    height: 32
                    
                    Label:
                        text: 'Birthday ( dd/mm/yyyy )'
                        markup: True
                        
                    DateInput:
                        id: bir_field
                        focus: False
                        write_tab: False
                        on_text_validate: pwd_field.focus = True
                        
                TextInput: 
                    id: pwd_field
                    password: True
                    hint_text: 'Password'
                    write_tab: False
                    focus: False
                    multiline: False
                    on_text_validate: vpw_field.focus = True
                
                TextInput: 
                    id: vpw_field
                    password: True
                    hint_text: 'Confirm password'
                    write_tab: False
                    focus: False
                    multiline: False
                    on_text_validate: root.validate_user()

                Spinner:
                    id: fom_field
                    text: 'Education'
                    values: root.list_formacoes()
                    background_color: root.consts().COLOR_MAIN[0]
                    height: '32dp'
                    on_text: root.textinputtext = self.text
                    dropdown_cls: Factory.MyDropdown
                
                Spinner:
                    id: pai_field
                    text: 'Contries'
                    values: root.list_paises()
                    background_color: root.consts().COLOR_MAIN[0]
                    height: '32dp'
                    on_text: root.textinputtext = self.text
                    dropdown_cls: Factory.MyDropdown

            Label:
                id:sp
                size_hint_y: None
                height: 20
        
            Button:
                text: 'Confirm'
                size_hint_y: None
                height: 40
                background_color: root.consts().COLOR_MAIN[1]
                background_normal: ''
                on_release: root.validate_user()

            Label:
                id:sp2
            

    FlatButton:
        size_hint_y: .1
        height: 20
        text: 'Home'
        on_release: root.redirect_gestme()


