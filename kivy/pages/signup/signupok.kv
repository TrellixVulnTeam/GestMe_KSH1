#:kivy 1.8.0
<SignupokWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    
    canvas.before:
        Color: 
            rgba: root.consts().COLOR_MAIN[0]
        
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation:'vertical' 
               
        BoxLayout:
            orientation: 'vertical'
            padding: main_win.space_x, 10
            spacing: 20
        
            Label:
                text:'Registration successful!'
                bold: True
                font_size: 35
            Label:
                text: "We're happy to have you with us :)"
                bold: True
                font_size: 20
        
            HoverButton:
                text: 'Home'
                size_hint_y: None
                height: 40
                background_color: root.consts().COLOR_MAIN[1]
                background_normal: ''
                on_release: root.redirect_main()

            Label:
                id:sp2
            